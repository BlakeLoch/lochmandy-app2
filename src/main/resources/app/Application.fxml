<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="450.0" prefWidth="770.0"
  xmlns="http://javafx.com/javafx/17" fx:controller="app.ApplicationController">
  <children>
    <HBox AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" alignment="CENTER" layoutX="10.0" layoutY="47.0"
      prefHeight="35.0" prefWidth="750.0" spacing="10.0" visible="false"
      fx:id="addBar">
      <children>
        <Button mnemonicParsing="false" onAction="#addConfirmClicked" text="Confirm"/>
        <Button mnemonicParsing="false" onAction="#addCancelClicked" text="Cancel"/>
        <Label text="Value"/>
        <Label text="Name"/>
        <Label text="Serial No."/>
        <TextField prefHeight="26.0" prefWidth="142.0" promptText="($) USD" fx:id="addValue"/>
        <TextField prefHeight="26.0" prefWidth="116.0" promptText="A-XXX-XXX-XXX"
          fx:id="addSerialNumber"/>
        <TextField prefHeight="26.0" prefWidth="190.0" promptText="2-256 Characters"
          fx:id="addName"/>
      </children>
    </HBox>
    <HBox AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" alignment="CENTER" layoutX="10.0" layoutY="47.0"
      prefHeight="35.0" prefWidth="750.0" spacing="10.0" visible="false"
      fx:id="editBar">
      <children>
        <Button mnemonicParsing="false" onAction="#editConfirmClicked" text="Confirm"/>
        <Button mnemonicParsing="false" onAction="#editCancelClicked" text="Cancel"/>
        <Label text="Value"/>
        <Label text="Name"/>
        <Label text="Serial No."/>
        <TextField prefHeight="26.0" prefWidth="142.0" promptText="($) USD" fx:id="editValue"/>
        <TextField prefHeight="26.0" prefWidth="116.0" promptText="A-XXX-XXX-XXX"
          fx:id="editSerialNumber"/>
        <TextField prefHeight="26.0" prefWidth="190.0" promptText="2-256 Characters"
          fx:id="editName"/>
      </children>
    </HBox>
    <HBox AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" alignment="CENTER" layoutX="10.0" layoutY="47.0"
      prefHeight="35.0" prefWidth="750.0" spacing="10.0" visible="false"
      fx:id="searchBar">
      <children>
        <Button mnemonicParsing="false" onAction="#searchNameButtonClicked" text="Search"/>
        <Button mnemonicParsing="false" onAction="#searchSerialNumberButtonClicked" text="Search"/>
        <Button mnemonicParsing="false" onAction="#searchDoneClicked" text="Done"/>
        <Label text="Name"/>
        <Label text="Serial No."/>
        <TextField prefHeight="26.0" prefWidth="263.0" promptText="Name" fx:id="searchName"/>
        <TextField prefHeight="26.0" prefWidth="178.0" promptText="Serial No."
          fx:id="searchSerialNumber"/>
      </children>
    </HBox>
    <HBox AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" alignment="CENTER" layoutX="10.0" layoutY="47.0"
      prefHeight="35.0" prefWidth="750.0" spacing="10.0" visible="false"
      fx:id="saveBar">
      <children>
        <Button mnemonicParsing="false" onAction="#saveTSVClicked" text="TSV"/>
        <Button mnemonicParsing="false" onAction="#saveHTMLClicked" text="HTML"/>
        <Button mnemonicParsing="false" onAction="#saveJSONClicked" text="JSON"/>
        <Button mnemonicParsing="false" onAction="#saveCancelClicked" text="Cancel"/>
      </children>
    </HBox>
    <HBox AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" alignment="CENTER" layoutX="10.0" layoutY="47.0"
      prefHeight="35.0" prefWidth="750.0" spacing="10.0" visible="false"
      fx:id="sortBar">
      <children>
        <Button mnemonicParsing="false" onAction="#sortNameClicked" text="Name (A)"
          fx:id="sortName"/>
        <Button mnemonicParsing="false" onAction="#sortSerialNumberClicked" text="Serial Number (A)"
          fx:id="sortSerialNumber"/>
        <Button mnemonicParsing="false" onAction="#sortValueClicked" text="Value (A)"
          fx:id="sortValue"/>
        <Button mnemonicParsing="false" onAction="#sortDoneClicked" text="Done"/>
      </children>
    </HBox>
    <HBox AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" alignment="CENTER" layoutX="10.0" layoutY="47.0"
      prefHeight="35.0" prefWidth="750.0" spacing="10.0" fx:id="menuBar">
      <children>
        <Button mnemonicParsing="false" onAction="#addItemClicked" text="Add"/>
        <Button mnemonicParsing="false" onAction="#editItemClicked" text="Edit"/>
        <Button mnemonicParsing="false" onAction="#clearItemsClicked" text="Clear"/>
        <Button mnemonicParsing="false" onAction="#searchItemsClicked" text="Search"/>
        <Button mnemonicParsing="false" onAction="#sortItemsClicked" text="Sort"/>
        <Button mnemonicParsing="false" onAction="#saveItemsClicked" text="Save"/>
        <Button mnemonicParsing="false" onAction="#loadItemsClicked" text="Load"/>
      </children>
    </HBox>
    <Label AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" alignment="CENTER" contentDisplay="CENTER"
      layoutX="10.0" layoutY="82.0" prefHeight="19.0" prefWidth="750.0" text="ERROR MESSAGE"
      textAlignment="CENTER" textFill="RED" visible="false" fx:id="errorMessage"/>
    <Label AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" alignment="CENTER" layoutX="247.0" layoutY="8.0"
      prefHeight="33.0" prefWidth="276.0" text="INVENTORY MANAGER"
      textAlignment="CENTER">
      <font>
        <Font size="27.0"/>
      </font>
    </Label>
    <TableView AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="100.0" layoutX="10.0"
      layoutY="100.0" prefHeight="340.0" prefWidth="750.0"
      fx:id="dataTable">
      <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
      <columns>
        <TableColumn maxWidth="150.0" minWidth="150.0" prefWidth="150.0" resizable="false"
          text="Serial No." fx:id="serialNumberColumn"/>
        <TableColumn minWidth="450.0" prefWidth="450.0" text="Name" fx:id="nameColumn"/>
        <TableColumn maxWidth="120.0" minWidth="120.0" prefWidth="120.0" resizable="false"
          text="Value" fx:id="valueColumn"/>
        <TableColumn maxWidth="30.0" minWidth="30.0" prefWidth="30.0" resizable="false"
          sortable="false" text=" X" fx:id="removeColumn"/>
      </columns>
    </TableView>
  </children>
</AnchorPane>
