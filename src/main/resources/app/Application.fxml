<AnchorPane prefHeight="450.0" prefWidth="770.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.ApplicationController">
   <children>
      <TableView fx:id="dataTable" layoutX="10.0" layoutY="100.0" prefHeight="340.0" prefWidth="750.0">
        <columns>
          <TableColumn fx:id="serialNumberColumn" prefWidth="150.0" text="Serial No." />
